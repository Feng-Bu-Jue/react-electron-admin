{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@root/*": [
        "*"
      ]
    },
    "target": "ESNext",
    "module": "CommonJS",
    "declaration": true,
    "declarationDir": "dist/types",
    "lib": [
      "esnext",
      "es6",
      "DOM"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/main.js",
    "src/main.js",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}