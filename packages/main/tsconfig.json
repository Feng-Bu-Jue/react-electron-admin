{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@root/*": [
        "*"
      ]
    },
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}