{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@root/*": [
        "*"
      ]
    },
    "target": "es2015",
    "module": "esnext",
    "declaration": true,
    "declarationDir": "dist/types",
    "lib": [
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}